<h1>TODO一覧</h1>
<ul>
  <% @todos.each do |todo| %>
    <li>
      <a href="/todos/<%= todo[0] %>/edit"><%= todo[1] %></a>
    </li>
  <% end %>
</ul>

<form action="/todos" method="POST" class="todo-form">
  <input type="text" name="title" placeholder="新しいTODOを入力">
  <input type="submit" value="追加">
</form>

<link rel="stylesheet" href="/styles.css">
